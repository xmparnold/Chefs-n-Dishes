@model Chef



<div class="container w-75 mx-auto">
    <h2 class="text-center">New Chef</h2>

    <form class="shadow p-3 rounded" asp-controller="Chef" asp-action="Create" method="POST">

        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
            <input class="form-control" asp-for="FirstName">
        </div>

        <div class="mb-3">
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
            <input type="number" class="form-control" asp-for="LastName">
        </div>

        <div class="mb-3">
            <label asp-for="DOB"></label>
            <span asp-validation-for="DOB" class="text-danger font-weight-bold"></span>
            <input class="form-control" asp-for="DOB" type="datetime">
        </div>

        <button class="btn btn-success">Add Chef</button>
        

    </form>

</div>